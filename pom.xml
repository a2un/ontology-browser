<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.coode</groupId>
  <artifactId>ontology-browser</artifactId>
  <packaging>war</packaging>
  <version>2.0-SNAPSHOT</version>
  <name>ontology-browser Webapp</name>
  <url>http://maven.apache.org</url>

  <repositories>
    <repository>
      <id>project.local</id>
      <name>project</name>
      <url>file:${project.basedir}/repo</url>
    </repository>
  </repositories>

  <dependencies>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
      <version>3.0.1</version>
    </dependency>

    <dependency>
      <groupId>uk.co.nickdrummond</groupId>
      <artifactId>gaphu</artifactId>
      <version>0.0.9</version>
    </dependency>

    <dependency>
      <groupId>org.coode</groupId>
      <artifactId>suggestor</artifactId>
      <version>1.0.0</version>
    </dependency>

    <dependency>
      <groupId>net.sourceforge.owlapi</groupId>
      <artifactId>owlapi-distribution</artifactId>
      <version>3.2.2-custom</version>
    </dependency>

    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.14</version>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <finalName>ontology-browser</finalName>


    <plugins>

      <plugin>
        <groupId>org.codehaus.cargo</groupId>
        <artifactId>cargo-maven2-plugin</artifactId>
        <version>1.4.10</version>
        <configuration>
          <!-- Container configuration -->
          <container>
            <containerId>jetty7x</containerId>
            <type>embedded</type>
          </container>
          <!-- Configuration to use with the container or the deployer -->
          <configuration>
            <properties>
              <cargo.servlet.port>8080</cargo.servlet.port>
              <cargo.jetty.createContextXml>true</cargo.jetty.createContextXml>
            </properties>

          </configuration>
        </configuration>
      </plugin>
    </plugins>

  </build>

</project>
